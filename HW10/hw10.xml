<?xml version="1.0" encoding="UTF-8"?>

<project name="hw10" basedir="." default="run">
    <property environment="env" />
    <echo message="JUNIT: ${env.JUNIT_HOME}" />
    <echo message="ANT_HOME: ${env.ANT_HOME}" />
    <property name="src" location="src" />
    <property name="bin" location="bin" />
    <path id="classpath">
        <pathelement location="bin" />
        <fileset dir="${env.JUNIT_HOME}" includes="junit*.jar" excludes="org.junit.vintage.*.jar" />
        <fileset dir="${env.JUNIT_HOME}" includes="org.opentest4j*.jar" />
        <fileset dir="${env.JUNIT_HOME}" includes="org.apiguardian*.jar" />
    </path>
    <property name="toString:classpath" value=""/>
    <echo message="${toString:classpath}" />
    <target name="init">
        <mkdir dir="${bin}" />
    </target>
    <target name="clean" depends="init">
        <delete includeemptydirs="true">
            <fileset dir="${bin}" includes="**/*" />
        </delete>
    </target>
    <target name="compile" depends="clean">
        <javac srcdir="${src}" destdir="${bin}" includeAntRuntime="no">
            <classpath refid="classpath" />
            <include name="edu/umb/cs681/hw10/*.java" />
        </javac>
    </target>
    <target name="run" depends="compile">
        <java classname="edu.umb.cs681.hw10.RunnableCancellableInterruptiblePrimeFactorizer" classpathref="classpath" fork="true" />
    </target>
</project>